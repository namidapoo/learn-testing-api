{
	"name": "learn-testing-api",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow bun",
		"prepare": "lefthook install",
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check --write .",
		"test": "vitest run",
		"test:watch": "vitest --watch",
		"openapi:json": "curl http://localhost:8787/openapi.json -o openapi.json",
		"openapi:yml": "cat openapi.json | yq -P > openapi.yml",
		"openapi:generate": "bun run openapi:json && bun run openapi:yml"
	},
	"dependencies": {
		"@hono/swagger-ui": "^0.5.2",
		"@hono/zod-openapi": "^1.0.2",
		"drizzle-orm": "^0.44.4",
		"hono": "^4.8.10",
		"uuid": "^11.1.0",
		"zod": "^4.0.14"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@types/node": "^24.2.0",
		"@types/uuid": "^10.0.0",
		"drizzle-kit": "^0.31.4",
		"lefthook": "^1.12.2",
		"vitest": "^3.2.4",
		"wrangler": "^4.4.0"
	}
}
